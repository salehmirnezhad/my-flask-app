stages:
  - build
  - test
  - deploy

build:
  stage: build
  script:
    - echo "Building the application..."
    - cd /root/my-flask-app
    - docker build -t my-flask-app2 .
  timeout: 60m
  allow_failure: false  # مطمئن می‌شود که اگر این مرحله خطا دهد، مراحل بعدی اجرا نخواهند شد.

test:
  stage: test
  script:
    - echo "Running tests..."
    - docker run --rm my-flask-app2 pytest
  timeout: 60m
  allow_failure: false  # مطمئن م  ی‌شود که اگر این مرحله خطا دهد، مراحل بعدی اجرا نخواهند شد.

deploy:
  stage: deploy
  script:
    - echo "Deploying the application..."
    - docker-compose up -d
  timeout: 60m
  allow_failure: false  # مطمئن می‌شود که اگر این مرحله خطا دهد، مراحل بعدی اجرا نخواهند شد.
